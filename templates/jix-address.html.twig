<div class="panel panel-primary">
    <div class="panel-heading"><span class="glyphicon glyphicon-home"></span> {{ title }}</div>
    <div class="panel-body">
        <p>{{ drupal_token('site:name') }} - {{ drupal_token('site:owner') }}</p>
        <p><span class="glyphicon glyphicon-map-marker"></span> {{ drupal_token('site:address_line_1') }} </p>
        <p>{{ drupal_token('site:address_line_2') }}</p>
        <p><span class="glyphicon glyphicon-earphone"></span> {{ drupal_token('site:phone') }}</p>
        <p><span class="glyphicon glyphicon-envelope"></span> {{ drupal_token('site:mail') }}</p>
    </div>
</div>